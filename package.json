{
  "name": "generator-nodeapi",
  "version": "1.0.0",
  "description": "Scaffold out a back-end node api using express ",
  "homepage": "https://github.com/ganny26/generator-nodeapi",
  "author": {
    "name": "selvaganeshrajam",
    "email": "selvaganeshrajam@gmail.com",
    "url": "http://github.com/ganny26"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "nodejs",
    "expressjs",
    "backend",
    "app",
    "yeoman-generator"
  ],
  "engines": {
    "npm": ">= 4.0.0"
  },
  "devDependencies": {
    "eslint": "5.15.1",
    "eslint-config-prettier": "4.1.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "command-exists": "^1.2.2",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "bugs": {
    "url": "https://github.com/ganny26/generator-nodeapi/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ganny26/generator-nodeapi.git"
  },
  "license": "MIT"
}
